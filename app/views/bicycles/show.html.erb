<div class="container mt-5 p-5 w-65 bg-white">

  <div class="row justify-content-between p-3">
    <div class="column">
      <h1><%= @bicycle.brand %></h1>
      <p><%= "Category: #{@bicycle.category}" %></p>
      <p><%= "Address: #{@bicycle.address}" %></p>
      <p><%= "$#{@bicycle.price_per_day}/day" %></p>
    </div>
    <div class="column">
      <%= cl_image_tag @bicycle.photo, height: 300, width: 400, crop: :fill %>
    </div>
    <div class="column">
      <% if user_signed_in? && @bicycle.user == current_user %>
        <%= simple_form_for [@bicycle, @booking] do |f| %>
          <%= f.input :begin_date, html5: true %>
          <%= f.input :end_date, html5: true %>
          <%= f.submit %>
        <% end %>
      <% else %>
        <p><%= link_to "Log in", new_user_session_path %></p>
        <p><%= link_to "Sign up", new_user_registration_path %></p>
      <% end %>
    </div>
  </div>
  <%= link_to 'Back', bicycles_path %>
</div>
